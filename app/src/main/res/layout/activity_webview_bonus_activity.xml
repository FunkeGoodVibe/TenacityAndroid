<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="kingscollegelondon.segmajorproject.WebviewBonusActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <WebView
            android:id="@+id/webb"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txt_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/home_logo"
            android:gravity="top"
            android:padding="0dp"
            android:text=" "
            android:textColor="#000000"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/txt_course"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="@mipmap/mycourse_logo"
            android:gravity="top"
            android:padding="0dp"
            android:text=" "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="@mipmap/chat_logo"
            android:gravity="top"
            android:padding="0dp"
            android:text=" "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/profil_logo"
            android:gravity="top"
            android:padding="1dp"
            android:text=" "
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>