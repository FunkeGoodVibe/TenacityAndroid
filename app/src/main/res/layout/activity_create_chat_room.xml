<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:fillViewport="true"
    android:orientation="vertical">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kingscollegelondon.segmajorproject.CreateChatRoomActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCreateRoom"
        android:layout_above="@id/ly_tab_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/buttonCreateRoom"
        android:layout_toStartOf="@+id/buttonCreateRoom" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create room"
        android:layout_above="@id/ly_tab_bar"
        android:id="@+id/buttonCreateRoom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="16dp"
        android:background="#00000000"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/editTextCreateRoom" />

    <LinearLayout
        android:id="@+id/ly_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txt_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/home_logo"
            android:gravity="top"
            android:padding="0dp"
            android:text=" "
            android:textColor="#000000"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/txt_course"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:background="@mipmap/mycourse_logo"
            android:gravity="top"
            android:padding="0dp"
            android:text=" "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/chat_logo"
            android:gravity="top"
            android:padding="0dp"
            android:layout_marginRight="50dp"
            android:text=" "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/profil_logo"
            android:gravity="top"
            android:padding="1dp"
            android:text=" "
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>
</RelativeLayout>
</ScrollView>